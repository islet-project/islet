            "-C", "bp.secureflashloader.fname=%s/bl1.bin" % OUT,
            "-f", FVP_CONFIG,
            "-Q", "1000"]
    args += prepare_arguments(debug, trace, trace_toggle, no_telnet)
    run(args, cwd=FVP_DIR)

